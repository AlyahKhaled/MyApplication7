<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.acer.myapplication.sentInveDetales">


    <ImageButton
        android:onClick="Back"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/arow"
        android:id="@+id/imageButton2"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageView" />

    <ImageView
        android:layout_width="227dp"
        android:layout_height="49dp"
        android:background="@drawable/zwara_word"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:layout_width="80dp"
        android:onClick="toProfUser"
        android:layout_height="71dp"
        tools:layout_editor_absoluteY="71dp"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/imageButton3"
        android:scaleType="fitXY"
        android:background="@drawable/pers"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView"
        android:layout_above="@+id/textView4" />

    <ListView
        android:id="@+id/plist"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView4"
        android:layout_above="@+id/textView7" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:background="#e9a226"
        android:text="  "
        android:textAlignment="center"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:background="#d49528"
        android:text="   "
        android:textAlignment="center"
        android:layout_below="@+id/imageButton3"
        android:layout_alignParentEnd="true" />

    <ListView
        android:id="@+id/apsentlist"
        android:layout_width="120dp"
        android:layout_height="135dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView5"
        android:layout_above="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="340dp"
        android:layout_height="30dp"
        android:background="#8c631a"
        android:text="   "
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:id="@+id/suggestionList"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7" />

    <Button
        android:id="@+id/cancelBu"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@drawable/pb"
        android:onClick="cancelInvitation"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="إلغــاء الدعوة"
        android:layout_below="@+id/suggestionList"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />


</RelativeLayout>
