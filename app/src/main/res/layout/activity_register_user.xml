<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/secbackground"
    tools:context="com.example.acer.myapplication.registerUser">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textColor="#6c481d"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:id="@+id/name"
        android:hint="الاسم"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/username"
        android:layout_toStartOf="@+id/imageView5" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pass"
        android:layout_alignRight="@+id/pass"
        android:layout_below="@+id/imageView6"
        android:ems="10"
        android:hint="رقم الجوال"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColor="#6c481d"
        android:layout_alignStart="@+id/pass" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="كلمة المرور"
        android:textColor="#6c481d"
        android:textAlignment="center"
        android:ems="10"
        android:id="@+id/pass"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/phone"
        android:layout_toLeftOf="@+id/imageView5"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"

        android:clickable="true"
        android:onClick="restri"
        android:text="القيود"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="loginA"
        android:text="تسجيل دخول"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:layout_below="@+id/button"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginTop="11dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:ems="10"
        android:hint="ما اسم أفضل أصدقائك؟"
        android:textColor="#6c481d"
        android:id="@+id/BF"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/groupicon"
        android:id="@+id/imageView8"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/imageView9" />

    <TextView
        android:text="الأسئلة:"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:textSize="40dp"
        android:textColor="#694418"
        android:id="@+id/textView3"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/phone"
        android:id="@+id/imageView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/pass"
        android:layout_alignBottom="@+id/phone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="مااسم مدينتك المفضلة؟"
        android:textColor="#6c481d"
        android:textAlignment="center"
        android:ems="10"
        android:id="@+id/BC"
        android:layout_below="@+id/BT"
        android:layout_alignLeft="@+id/BT"
        android:layout_alignStart="@+id/BT" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="اسم المستخدم"
        android:textColor="#6c481d"
        android:textAlignment="center"
        android:ems="10"
        android:id="@+id/username"
        android:layout_alignTop="@+id/imageView5"
        android:layout_marginTop="13dp"
        android:layout_alignStart="@+id/pass"
        android:layout_toStartOf="@+id/imageView6" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/passicon"
        android:id="@+id/imageView6"
        android:layout_below="@+id/username"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/usericon"
        android:id="@+id/imageView5"
        android:layout_marginTop="28dp"
        android:layout_alignTop="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:background="@drawable/nn"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:hint="ما اسم معلمك المفضل؟"
        android:textColor="#6c481d"
        android:ems="10"
        android:id="@+id/BT"
        android:layout_below="@+id/BF"
        android:layout_alignStart="@+id/BF" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ticon"
        android:id="@+id/imageView9"
        android:layout_below="@+id/BF"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/BC" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/earthicon"
        android:id="@+id/imageView10"
        android:layout_below="@+id/imageView9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/button" />

    <Button

        android:layout_width="270dp"
        android:layout_height="47dp"
        android:id="@+id/button"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:width="260dp"
        android:background="@drawable/reg"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/BC"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
