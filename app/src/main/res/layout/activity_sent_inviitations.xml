<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.acer.myapplication.sentInviitations">


    <TextView
        android:onClick="Back"
        android:text=""
        android:background="@drawable/arow"
        android:layout_width="40sp"
        android:layout_height="35sp"
        android:id="@+id/textView27"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView2"
        android:layout_toStartOf="@+id/textView26"
        android:layout_alignParentTop="true" />

    <TextView
        android:text=""
        android:background="@drawable/zwara_word"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:id="@+id/textView26"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:onClick="profile"
        android:text=""
        android:layout_width="40sp"
        android:background="@drawable/person"
        android:layout_height="35sp"
        android:id="@+id/textView28"
        android:layout_alignBottom="@+id/textView27"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView26" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="دعوات المرسلة"
        android:textColor="#D98518"
        android:textSize="40sp"
        android:layout_below="@+id/textView26"
        android:layout_toEndOf="@+id/imageView19" />

    <ListView
        android:id="@+id/sentList"
        android:layout_width="320dp"
        android:layout_height="355dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/dd"
        android:layout_above="@+id/sentList"
        android:layout_toStartOf="@+id/textView26" />


</RelativeLayout>
