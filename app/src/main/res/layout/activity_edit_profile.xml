<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.acer.myapplication.editProfile">

    <ImageButton
        android:id="@+id/imageButton13"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/imageView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/arow"
        android:onClick="Back" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"

        android:scaleType="fitXY"
        app:srcCompat="@drawable/datee"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toEndOf="@+id/imageButton13" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/zwara_word" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/birth"
        android:layout_above="@+id/editB"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="19dp" />

    <EditText
        android:id="@+id/nameUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="الاسم"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#6c481d"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignEnd="@+id/imageView14" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/msg"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="رسالة شخصية باللغة الإنجليزية"
        android:textColor="#6c481d"
        android:textAlignment="center"
        android:ems="10"
        android:id="@+id/msgP"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_alignStart="@+id/nameUs" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/usericon"
        android:id="@+id/imageView5"
        android:layout_below="@+id/imageView14"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="69dp" />

    <Button
        android:id="@+id/editB"
        android:onClick="dat"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="49dp"
        android:width="260dp"
        android:background="@drawable/editee"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageButton8" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="اختر تاريخ ميلادك"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
</RelativeLayout>
