<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background"

    tools:context="com.example.acer.myapplication.forgetpasswored">


    <ImageButton
        android:onClick="Back"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/arow"
        android:id="@+id/imageButton2"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:background="@drawable/zwara_word"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="270dp"
        android:layout_height="47dp"
        android:textColor="#ffffff"
        android:background="@drawable/forget"
        android:width="260dp"
        android:id="@+id/button3"
        android:layout_marginBottom="29dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editText11" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText12"
        android:hint="الإجابـــــــــــــــــــة"
        android:layout_above="@+id/button"
        android:layout_toStartOf="@+id/imageView13"
        android:layout_marginBottom="20dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/editText10"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="14dp"
        android:text="أجب على أحد هذه الاأسئلة:"
        android:textColor="#694418"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/passicon"
        android:id="@+id/imageView13"
        android:layout_above="@+id/button3"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName|textPassword"
        android:ems="10"
        android:textAlignment="center"
        android:id="@+id/editText11"
        android:hint="كلمـة المرور الجديدة "
        android:textColor="#e5a332"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/button3"
        android:layout_toStartOf="@+id/imageView13" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textAlignment="center"
        android:id="@+id/editText10"
        android:hint="اسم المستخدم"
        android:textColor="#e5a332"
        android:layout_alignBottom="@+id/imageView12"
        android:layout_toStartOf="@+id/imageView12"
        android:layout_marginBottom="12dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/usericon"
        android:id="@+id/imageView12"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView" />

    <Button
        android:id="@+id/button"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/enter"
        android:onClick="check"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/imageView13"
        android:layout_alignEnd="@+id/button3" />

</RelativeLayout>
