<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.acer.myapplication.invitation_info">

    <Button
        android:text=""
        android:onClick="sugg"
        android:layout_width="80sp"
        android:layout_height="60sp"
        android:background="@drawable/suggestion"
        android:id="@+id/sug"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView26"
        android:layout_toStartOf="@+id/textView26" />

    <Button
        android:text=""
        android:layout_width="80sp"
        android:layout_height="60sp"
        android:background="@drawable/accept"
        android:id="@+id/accept"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView10" />

    <ImageButton
        android:onClick="Back"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/arow"
        android:id="@+id/imageButton2"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="227dp"
        android:layout_height="49dp"
        android:background="@drawable/zwara_word"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:layout_width="80dp"
        android:layout_height="71dp"
        tools:layout_editor_absoluteY="71dp"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/imageButton3"
        android:scaleType="fitXY"
        android:background="@drawable/pers"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/imageView" />

    <Button
        android:text=""
        android:onClick="ignor"
        android:layout_width="80sp"
        android:layout_height="60sp"
        android:background="@drawable/ignor"
        android:id="@+id/ignor"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />



    <ListView
        android:background="@drawable/picture3"
        android:divider="#A06A19"
        android:dividerHeight="2dp"
        android:layout_weight="1"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:layout_above="@+id/button2" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="معلومات الدعوة"
        android:textAlignment="center"
        android:textColor="#C57509"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="معلومات الدعوة"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button2"
        android:onClick="map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="see the location"
        android:layout_above="@+id/ignor"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
